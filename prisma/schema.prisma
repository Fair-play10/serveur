generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // Change to your preferred database
}

model Reservation {
  id            Int      @id @default(autoincrement())
  name          String
  numberOfPersons Int
  seating       String
  date          DateTime
  time          String
  phone         String
  comments      String?
}

model Contact {
  id      Int      @id @default(autoincrement())
  email   String
  subject String
  content String
}

model MenuItem {
  id         Int      @id @default(autoincrement())
  name       String
  description String?
  price      Float
  category   String
}
